                        loc = "css=a[href='"+link[link.find(".com")+4:]+"']"
                        refine_search_dict[title][name] = loc
                        print("locator %s name %s link %s" % (loc, name, link))
                except NoSuchElementException:
                    print("exception, NO lists ")


