        print('found refine by')
        for search_title in refine_search_by_titles:
            i = 1
            title = WebElement(search_title).text.lower()
            refine_search_dict[title] = {}
            print("found title %s" % title)
            if "case color" in title:
                case_colors = WebElement(search_title).find_elements_by_locator("xpath=following-sibling::ul[2]/li/span/a")
                for color in case_colors:
                    refine_search_dict[title][color.get_attribute("title").lower()] = color
            elif "amazon prime" in title:
                print("found prime")
                option = "prime"
                name = WebElement(search_title).find_element_by_locator("xpath=following-sibling::*[1]/div/li/span/span/div/label/input").get_attribute("name")
                loc = "css=input[type='checkbox'][name='"+name+"']"
                print("locator %s name %s" % (loc, name))
                refine_search_dict[title][option] = CheckBox(browser.driver, loc)
            elif "customer review" in title:
                print("found stars")
                customer_stars = browser.driver.find_elements_by_locator("css=ul>div>li>span>a>i[class*='star']")
                for star in customer_stars:
                    option = star.get_attribute("class")
                    num_of_stars = option[option.rfind("-")+1:]
                    refine_search_dict[title][num_of_stars+infl.number_to_words(int(num_of_stars)) + " star"] = star
                    print(num_of_stars+infl.number_to_words(int(num_of_stars)) + " %s star  , option  %s" % (num_of_stars, star))
            else:
                try:
                    i = 1
                    options = WebElement(search_title).find_elements_by_locator("xpath=following-sibling::ul[1]/div/li/span/span/div/label/input")
                    for option in options:
                        print("found INPUTS ")
                        print("checkbox %s" %i)
                        attr = option.get_attribute("name")
                        name = WebElement(option).find_element_by_locator("xpath=following-sibling::*[2]/span").text.lower()
                        loc = "css=input[type='checkbox'][name='"+attr+"']"
                        refine_search_dict[title][name] = loc
                        print("locator %s name %s" % (loc, name))
                        i += 1
                except NoSuchElementException:
                    print("exception, NOT inputs ")
                try:
                    i = 1
                    options = WebElement(search_title).find_elements_by_locator("xpath=following-sibling::*[1]/div/li/span/a")
